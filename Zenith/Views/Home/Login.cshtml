@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="display:flex; justify-content:center; align-items:center; height:80vh;">
    <div style="background-color:white; padding:2rem; border-radius:12px; box-shadow:0px 4px 8px rgba(0,0,0,0.1); width:320px;">
        <h2 style="text-align:center; color:#007B9E;">Iniciar Sesión</h2>
        <form method="post" asp-action="Login">
            <div style="margin-bottom:1rem;">
                <label>Correo:</label>
                <input type="email" name="email" value="admin@zenith.com" style="width:100%; padding:0.5rem;" />
            </div>
            <div style="margin-bottom:1rem;">
                <label>Contraseña:</label>
                <input type="password" name="password" value="Zenith123" style="width:100%; padding:0.5rem;" />
            </div>
            <button type="submit" style="width:100%; padding:0.7rem; background-color:#00A8B5; color:white; border:none; border-radius:6px;">
                Ingresar
            </button>
        </form>
    </div>
</div>
